---
import { config } from "../config";
import Markdown from "@astrojs/markdown-component";
const index = await fetch(config.api + "/api/page-d-accueil?populate=%2A");
const { data } = await index.json();
---

<section class="bg-motif-2 bg-gray-900 mb-36">
  <div class="max-w-6xl w-full mx-auto relative pt-40">
    <div
      class="p-4 md:p-10 z-10 relative md:-bottom-10 lg:rounded-md space-y-5 shadow-lg lg:max-w-3xl bg-white"
    >
      <h2 class="text-3xl font-semibold">ZeBatuc'Action</h2>

      <Markdown>{data.attributes.zebatucactionText}</Markdown>
      <a
        class="bg-white font-semibold inline-block text-orange-700 hover:text-white md:rounded-md hover:bg-orange-500 transition px-7 py-4"
        href="/zebatucaction"
      >
        En savoir plus
      </a>
    </div>
    <div class="lg:absolute right-0 top-10 bg-orange-200 lg:p-2.5 rounded-md">
      <figure class="w-full bg-white rounded-sm max-w-md">
       
        <picture>
    
        <source
        class="w-full"
        height={data.attributes.zebatucactionPicture.data.attributes.height}
        width={data.attributes.zebatucactionPicture.data.attributes.width}
        srcset={config.api +
          data.attributes.zebatucactionPicture.data.attributes.url + "?format=webp"}
      />
        <img
        class="w-full"
        height={data.attributes.zebatucactionPicture.data.attributes.height}
        width={data.attributes.zebatucactionPicture.data.attributes.width}
        src={config.api +
          data.attributes.zebatucactionPicture.data.attributes.url}
        alt=""
      />
        </picture>
      </figure>
    </div>
  </div>
</section>
